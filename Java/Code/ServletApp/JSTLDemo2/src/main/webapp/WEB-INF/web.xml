<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" version="5.0">
  <display-name>JSTLDemo2</display-name>
  <welcome-file-list>
    <welcome-file>main.java</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>url_mysql</param-name>
    <param-value>jdbc:mysql://localhost:3306/jdbc</param-value>
  </context-param>
  <context-param>
    <param-name>driver_mysql</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>pass_mysql</param-name>
    <param-value>Diep1312#</param-value>
  </context-param>
  <context-param>
    <param-name>username_mysql</param-name>
    <param-value>root</param-value>
  </context-param>
  <servlet>
    <description></description>
    <display-name>form_filter</display-name>
    <servlet-name>form_filter</servlet-name>
    <jsp-file>/form_filter.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>form_filter</servlet-name>
    <url-pattern>/form_filter</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>form_filterServlet</display-name>
    <servlet-name>form_filterServlet</servlet-name>
    <servlet-class>demo.form_filterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>form_filterServlet</servlet-name>
    <url-pattern>/form_filterServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>ValidatedFormFilter</display-name>
    <filter-name>ValidatedFormFilter</filter-name>
    <filter-class>demo.ValidatedFormFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ValidatedFormFilter</filter-name>
    <url-pattern>/ValidatedFormFilter</url-pattern>
  </filter-mapping>
</web-app>